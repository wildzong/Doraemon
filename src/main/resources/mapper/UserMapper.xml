<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doraemon.lottery.login.dao.UserDao">
    <resultMap id="user_entityResultMap" type="com.doraemon.lottery.login.entity.User">
        <id column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="role" property="role" />
    </resultMap>

    <!--根据用户名获取用户信息-->
    <select id="getUserByUsername" resultMap="user_entityResultMap">
        select * from t_user where user_name = #{userName}
    </select>

    <!--添加用户-->
    <insert id="addUser" parameterType="com.doraemon.lottery.login.entity.User">
        insert into t_user(user_name, password, role)
        values (#{userName}, #{password}, #{role})
    </insert>

    <!--更新密码-->
    <update id="updatePwd">
        update t_user set password = #{password}
        where user_name = #{userName}
    </update>
</mapper>